                            <label for="js"><span>JS</span></label>
                            <input  class="ext_chk" type="checkbox" name="extension" value="json" id="json" onclick="check(this)">
                            <label for="json"><span>JSON</span></label>
                            <input  class="ext_chk" type="checkbox" name="extension" value="mp3" id="mp3" onclick="check(this)">
