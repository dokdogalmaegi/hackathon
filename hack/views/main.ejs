                            <label for="rar"><span>RAR</span></label>
                            <input class="ext_chk" type="checkbox" name="extension" value="svg" id="svg" onclick="check(this)">
                            <label for="svg"><span>SVG</span></label>
                            <input class="ext_chk" type="checkbox" name="extension" value="txt" id="txt" onclick="check(this)">
                            <label for="txt"><span>TXT</span></label>
                            <input class="ext_chk" type="checkbox" name="extension" value="xls" id="xls" onclick="check(this)">
                            <label for="xls"><span>XLS</span></label>
                            <input class="ext_chk" type="checkbox" name="extension" value="zip" id="zip" onclick="check(this)">
                            <label for="zip"><span>ZIP</span></label>
                        </div>
                    </div>
                    <div class="down_list">
                        <% for(let i = 0; i < data.length; i++) {%>
                        <div class='down_content <%= data[i].extension %>'>
                            <div class="down_top">
                                <div class="down_by">
                                    <svg version="1.1" id="레이어_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px"
                                    y="0px" viewBox="0 0 150 150" style="enable-background:new 0 0 150 150;" xml:space="preserve">
